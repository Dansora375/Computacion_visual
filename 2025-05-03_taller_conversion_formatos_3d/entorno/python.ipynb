        "def cargar_modelo(path):\\n",
        "    ext = Path(path).suffix.lower()\\n",
        "    return trimesh.load(path, force='mesh')\\n",
        "def info_modelo(m):\\n",
        "    return {'vertices': len(m.vertices), 'faces': len(m.faces), \\
",
